<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:paddingTop="120dip" 
		android:layout_height="fill_parent" android:stretchColumns="0" android:background="@drawable/user">
		<TextView android:text="Student Information" android:id="@+id/lblinfo"
			android:textColor="#ff0000" android:textSize="22dip"
			android:textStyle="bold" android:layout_marginTop="7dip"
			android:gravity="center"></TextView>
		<TableRow>
			<TextView android:text="User Name:-" android:textSize="18dip" android:id="@+id/lblusername"
				android:textStyle="bold" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginTop="5dip"
				android:layout_marginLeft="5dip" android:textColor="#000000"/>
			<EditText android:layout_width="190dip" android:singleLine="true"
				android:layout_height="40dip" android:id="@+id/txtusername"
				android:layout_marginRight="10dip" />
		</TableRow>
		<TableRow>
			<TextView android:text="Password" android:textSize="18dip" android:id="@+id/lblpassword"
				android:textStyle="bold" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginTop="5dip"
				android:layout_marginLeft="5dip" android:textColor="#000000"/>
			<EditText android:id="@+id/txtpassword" android:layout_width="190dip" android:password="true"
				android:singleLine="true" android:layout_height="40dip" android:layout_marginRight="10dip" />
		</TableRow>
		<TableLayout android:layout_marginTop="10dip" android:layout_marginLeft="40dip"
		 android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TableRow>
		<Button android:text="Log in" android:textSize="20dip" android:textStyle="bold"
		android:gravity="center" android:id="@+id/btnlogin" android:layout_width="120dip" android:layout_height="wrap_content"/>
		<Button android:text="Cancel" android:textSize="20dip" android:textStyle="bold"
		android:gravity="center" android:id="@+id/btncancel" android:layout_width="130dip" android:layout_height="wrap_content"/>
		</TableRow>
		</TableLayout>
</TableLayout>